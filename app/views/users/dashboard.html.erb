<div class="container d-flex">
  <div class="container">
    <h2>Mes locations</h2>
    <% @bookings.each do |booking| %>
      <div class="card-dashboard p-3">
        <%= cl_image_tag(booking.equipment.photo.key) %>
        <div class="card-dashboard-info p-3">
          <h4><%= booking.equipment.title %></h4>
          <p><%= DateTime.parse(booking.start_date.to_s).strftime("%d/%m/%Y") %> - <%= DateTime.parse(booking.end_date.to_s).strftime("%d/%m/%Y") %></p>
          <p><i class="fas fa-map-marker-alt"></i> <%= booking.equipment.location %></p>
          <p><%= booking.total_price %> €</p>
          <p><%= booking.status %></p>
        </div>
      </div>
    <% end %>
  </div>
  <div class="container">
    <h2>Mes équipements en location</h2>
    <% @bookings.each do |booking| %>
      <div class="card-dashboard p-3">
        <%= cl_image_tag(booking.equipment.photo.key) %>
        <div class="card-dashboard-info p-3">
          <h4><%= booking.equipment.title %></h4>
          <p><%= DateTime.parse(booking.start_date.to_s).strftime("%d/%m/%Y") %> - <%= DateTime.parse(booking.end_date.to_s).strftime("%d/%m/%Y") %></p>
          <p><i class="fas fa-map-marker-alt"></i> <%= booking.equipment.location %></p>
          <p><%= booking.total_price %> €</p>
          <p><%= booking.status %></p>
        </div>
      </div>
    <% end %>
  </div>
</div>
