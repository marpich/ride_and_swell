<div class="container d-flex">
  <div class="container">
    <h2>Mes locations</h2>
    <% @bookings.each do |booking| %>
      <div class="card-dashboard p-3">
        <%= cl_image_tag(booking.equipment.photo.key) %>
        <div class="card-dashboard-info p-3">
          <h4><%= booking.equipment.title %></h4>
          <p><%= DateTime.parse(booking.start_date.to_s).strftime("%d/%m/%Y") %> - <%= DateTime.parse(booking.end_date.to_s).strftime("%d/%m/%Y") %></p>
          <p><i class="fas fa-map-marker-alt"></i> <%= booking.equipment.location %></p>
          <p><%= booking.total_price %> €</p>
          <p><%= booking.status %></p>
        </div>
      </div>
    <% end %>
  </div>
  <div class="container">
    <h2><%= t("my_equipments") %></h2>
    <% @requests.each do |request| %>
      <div class="card-dashboard p-3">
        <%= cl_image_tag(request.equipment.photo.key) %>
        <div class="card-dashboard-info p-3">
          <h4><%= request.equipment.title %></h4>
          <p><%= request.user.first_name %> <%= request.user.last_name %> <%= request.user.phone %></p>
          <p><%= request.user.email %></p>
          <p><%= DateTime.parse(request.start_date.to_s).strftime("%d/%m/%Y") %> - <%= DateTime.parse(request.end_date.to_s).strftime("%d/%m/%Y") %></p>
          <p><%= request.total_price %> €</p>
          <p><%= request.status %></p>
          <div class="choice d-flex justify-content-between">
            <%= link_to "Accepter", accept_owner_booking_path(request), method: :patch %>
            <%= link_to "Refuser", reject_owner_booking_path(request), method: :patch %>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
