


<div class="main-container">

  <div class="index-cards">
    <% @equipments.each do |equipment| %>

      <div class="card-dashboard d-flex">
        <%= cl_image_tag(equipment.photo.key, class: "col-4") %>

        <div class="card-dashboard-info d-flex flex-column w-100">

          <div class="card-dashboard-title">
            <h4><%= equipment.title %></h4>
          </div>

          <div class="d-flex w-100 h-100">

            <div class="card-dashboard-details d-flex flex-column justify-content-between col-6">

              <div class="card-location d-flex align-items-center">
                <i class="fas fa-map-marker-alt text-blue"></i>
                <div class="mx-2">
                  <%= equipment.location %>
                </div>
              </div>

              <div class="card-dashboard-info-price d-flex align-items-center">
                <i class="fas fa-coins text-blue"></i>
                <div class="mx-2">
                  <%= equipment.price %> â‚¬
                </div>
              </div>

            </div>

            <div class="card-dashboard-link d-flex w-100">
              <div class="d-flex mx-auto mt-auto">
                <%= link_to "Voir l'article", equipment, class: "btn btn-main" %>
              </div>
            </div>
          </div>

        </div>
      </div>

    <% end %>
  </div>

  <div id="map" class="d-flex p-2 left-half col-4 my-2 w-50"
    data-controller="mapbox"
    data-mapbox-markers-value="<%= @markers.to_json %>"
    data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

</div>
