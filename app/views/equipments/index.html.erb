
<div class="m-5">
  <%# <% unless params["sport"] %>
    <%= simple_form_for :equipment, url: equipments_path, method: "GET", html: { class: 'form-inline' } do |f| %>
      <%= f.input :sport, collection: Equipment::SPORTS, input_html: {value: ""}, label: false,  class: "form-control form-control-lg" %>
      <%= f.submit "Search", class: "btn btn-primary" %>
    <% end %>
  <%# <% end %>
</div>

<div class="row d-flex justify-content-between row-cols-md-4 g-4 m-5">
  <% @equipments.each do |equipment| %>
      <div class="card">
        <%= cl_image_tag(equipment.photo.key, :class => "card-img-top p-3", :height => 400) %>
        <div class="card-body">
          <h5 class="card-title"><%= equipment.title %></h5>
          <p class="card-text"><%= equipment.description %></p>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <%= link_to "Réserver", equipment, class: "btn btn-primary" %>
            <p><%= equipment.price %>€ par jour</p>
        </div>
      </div>
  <% end %>
</div>
