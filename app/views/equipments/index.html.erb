

<div class="m-4 equipment-form d-flex justify-content-around">
  <%= form_tag equipments_path, method: :get do %>
    <div class="search-form-control form-group">
      <%= select_tag :sport, options_for_select(Equipment::SPORTS, params[:sport]),
        include_blank: true,
        class: "form-control"
      %>
      <%# <%= submit_tag "Search", class: "btn btn-primary" %>
      <button name="button" type="submit" class="btn btn-flat">
        <i class="fas fa-search"></i> Search
      </button>
    </div>
  <% end %>
</div>

<div class="main-container">

  <div class="index-cards">
    <% @equipments.each do |equipment| %>

      <div class="card-dashboard">
        <%= cl_image_tag(equipment.photo.key) %>
        <div class="card-dashboard-info">
          <h4><%= equipment.title %></h4>
          <div class="d-flex align-items-center my-2">
            <i class="fas fa-calendar text-blue"></i>
          </div>
          <div class="d-flex align-items-center">
            <i class="fas fa-map-marker-alt text-blue"></i>
            <div class="mx-2">
              <%= equipment.location %>
            </div>
          </div>
          <div class="card-dashboard-info-price d-flex align-items-center">
            <i class="fas fa-coins text-blue"></i>
            <div class="mx-2">
              <%= equipment.price %> â‚¬
            </div>
          </div>
        </div>
      </div>

    <% end %>
  </div>

  <div id="map" class="d-flex p-2 left-half col-4 my-2"
    data-controller="mapbox"
    data-mapbox-markers-value="<%= @markers.to_json %>"
    data-mapbox-api-key-value="<%= ENV['MAPBOX_API_KEY'] %>">
  </div>

</div>
