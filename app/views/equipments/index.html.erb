
<div class="m-4">
  <%= simple_form_for :search, url: equipments_path, method: "GET", html: { class: 'form-inline' } do |f| %>
    <%= f.input :sport, as: :select, collection: Equipment::SPORTS %>
    <%= f.submit "Search", class: "btn btn-primary" %>
  <% end %>
</div>

<div class="row row-cols-md-4 g-4 m-3">
  <% @equipments.each do |equipment| %>
      <div class="card">
        <img src="https://picsum.photos/200" class="card-img-top p-3" alt="...">
        <div class="card-body">
          <h5 class="card-title"><%= equipment.title %></h5>
          <p class="card-text"><%= equipment.description %></p>
        </div>
        <div class="card-footer d-flex justify-content-between">
            <a href="#" class="btn btn-primary">Réserver</a>
            <p><%= equipment.price %>€ par jour</p>
        </div>
      </div>
  <% end %>
</div>
