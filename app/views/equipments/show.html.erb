
<div class="card-category-sport m-2" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.3)), url(<%= image_url("#{@equipment.sport.downcase}-banner.jpeg") %>)">
  <h1><%= @equipment.sport %></h1>
</div>

<div class="container">

  <div class="card">
    <div class="card-body">

      <div class="card-title text-center">
        <h2> <%= @equipment.title %> </h2>
      </div>

      <div class="card-subtitle d-flex justify-content-between">
        <h3>üìç <%= @equipment.location %> </h3>
        <p><%= @equipment.user.first_name %></p>
      </div>

      <div class="card-text d-flex justify-content-around">
        <%= cl_image_tag(@equipment.photo.key) %>
        <div class="description-text flex-grow-1">
          <p>Marque: <%= @equipment.brand %></p>
          <p>Taille de la board: <%= @equipment.board_size %> </p>
          <p>Taille de l'aile: <%= @equipment.sail_size %> </p>
          <p>Etat: <%= @equipment.condition %></p>
          <p>Description: <%= @equipment.description %></p>
          <p>Prix/jour: <%= @equipment.price %> euros </p>
        </div>
      </div>

    </div>

  </div>

</div>
